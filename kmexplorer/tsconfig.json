{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": [
			"ESNext",
			"ESNext.AsyncIterable",
			"DOM"
		],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./*"
			],
			"%/*": [
				"../kmserver-core/src/*"
			]
		},
		"types": [
			"@types/node",
			"@nuxt/types",
			"@nuxtjs/axios",
			"@types/nuxtjs__auth",
			"nuxt-i18n",
			"buefy/types"
		],
		"experimentalDecorators": true
	},
	"exclude": [
		"../node_modules"
	]
}
